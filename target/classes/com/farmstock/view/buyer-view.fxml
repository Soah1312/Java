<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.farmstock.controller.BuyerController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <top>
        <VBox spacing="10">
            <Label text="Buyer Dashboard" styleClass="heading"/>
            <Label text="Browse available farm products" styleClass="subheading"/>
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Search by product or category" HBox.hgrow="ALWAYS"/>
                <Button text="Refresh" onAction="#handleRefresh"/>
                <Button text="Back" onAction="#handleBack"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="productTable" prefHeight="400">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="160"/>
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="140"/>
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="120"/>
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="120"/>
                <TableColumn fx:id="dateColumn" text="Date Added" prefWidth="140"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
