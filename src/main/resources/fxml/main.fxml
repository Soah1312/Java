<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- this is the ui layout file -->
<!-- learned fxml is kinda like html but for javafx -->
<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="farmersapp.MainController"
            fitToWidth="true" style="-fx-background-color: #f5f5f5;">
<VBox spacing="20" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">

    <!-- title at the top -->
    <Label text="ðŸŒ¾ Farmers Produce Tracker" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- section to add farmers -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label text="add new farmer" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="name:"/>
            <TextField fx:id="farmerNameField" promptText="e.g., john doe" prefWidth="200"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="phone:"/>
            <TextField fx:id="farmerPhoneField" promptText="e.g., 1234567890" prefWidth="200"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="location:"/>
            <TextField fx:id="farmerLocationField" promptText="e.g., california" prefWidth="200"/>
        </HBox>
        
        <!-- button to add farmer -->
        <Button text="add farmer" onAction="#handleAddFarmer" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Label fx:id="farmerStatusLabel" style="-fx-text-fill: green;"/>
    </VBox>

    <!-- table showing all farmers -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label text="all farmers" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <TableView fx:id="farmersTable" prefHeight="150">
            <columns>
                <TableColumn fx:id="farmerIdColumn" text="id" prefWidth="50"/>
                <TableColumn fx:id="farmerNameColumn" text="name" prefWidth="150"/>
                <TableColumn fx:id="farmerPhoneColumn" text="phone" prefWidth="120"/>
                <TableColumn fx:id="farmerLocationColumn" text="location" prefWidth="150"/>
            </columns>
        </TableView>
        
        <Button text="refresh" onAction="#handleRefreshFarmers" style="-fx-background-color: #9C27B0; -fx-text-fill: white;"/>
    </VBox>

    <!-- section to add produce -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label text="add new produce" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="produce name:"/>
            <TextField fx:id="produceNameField" promptText="e.g., tomatoes" prefWidth="200"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="quantity (kg):"/>
            <TextField fx:id="quantityField" promptText="e.g., 50.5" prefWidth="200"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="pick farmer:"/>
            <!-- dropdown to choose which farmer -->
            <ComboBox fx:id="farmerComboBox" promptText="choose a farmer" prefWidth="200"/>
        </HBox>
        
        <Button text="add produce" onAction="#handleAddProduce" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
    </VBox>

    <!-- table showing all produce -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
        <Label text="all produce" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <TableView fx:id="produceTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="id" prefWidth="50"/>
                <TableColumn fx:id="produceColumn" text="produce" prefWidth="150"/>
                <TableColumn fx:id="quantityColumn" text="quantity (kg)" prefWidth="120"/>
                <TableColumn fx:id="farmerColumn" text="farmer" prefWidth="150"/>
                <TableColumn fx:id="dateColumn" text="date added" prefWidth="150"/>
            </columns>
        </TableView>
        
        <Button text="refresh" onAction="#handleRefresh" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </VBox>

</VBox>
</ScrollPane>
